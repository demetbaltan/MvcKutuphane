@model MvcKutuphane.Models.Enitity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @*<label>KATEGORİ ADI</label>*@
        @Html.LabelFor(k=>k.AD) @*amaç sütunun ismi neyse o gelsin*@
        @Html.TextBoxFor(k=>k.AD, new {@class="form-control"}) @*o sütundaki değeri yazdırsın*@
    </div>
    <br />
    <div>
        <button class="btn btn-warning"> Güncelle</button>
    </div>
}

