@model MvcKutuphane.Models.Enitity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />

        @*@Html.LabelFor(k => k.PERSONEL)*@ @*amaç sütunun ismi neyse o gelsin*@
        <label>PERSONEL ADI</label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" }) @*o sütundaki değeri yazdırsın*@
    </div>
    <div>
        <button class="btn btn-warning"> Güncelle</button>
    </div>
}


